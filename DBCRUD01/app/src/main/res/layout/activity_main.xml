<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:text="DB CRUD on Mac"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_weight="2"
        />
    <EditText
        android:id="@+id/main_Edit_ip"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:textSize="20dp"
        android:gravity="center"
        android:text="192.168.0.84"
        android:hint="Apache Server IP Address"
        />
    <Button
        android:id="@+id/main_Btn_Insert"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:textSize="20dp"
        android:text="Insert"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/main_Btn_Update"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:textSize="20dp"
        android:text="Update"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/main_Btn_Delete"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:textSize="20dp"
        android:text="Delete"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/main_Btn_SelectA"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:textSize="20dp"
        android:text="Select All"
        android:layout_weight="1"
        />





</LinearLayout>